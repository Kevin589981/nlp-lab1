class Config:
    """
    é…ç½®ç±»ï¼šåŒ…å«æ‰€æœ‰å¯è°ƒå‚æ•°
    å‚æ•°ç»„ç»‡æ–¹å¼ä¾¿äºå­¦ç”Ÿç†è§£ï¼Œå‚æ•°å€¼ä¸nanoGPTåŸå§‹é…ç½®ä¿æŒä¸€è‡´
    """
    
    # =========================================================================
    # æ•°æ®é›†é…ç½®
    # =========================================================================
    dataset_path = '/kaggle/working/data/samsum'  # åŸå§‹æ•°æ®é›†è·¯å¾„
    dataset = 'samsum'          # æ•°æ®é›†åç§°ï¼ˆå¤„ç†åçš„æ•°æ®ä¼šä¿å­˜åœ¨data/{dataset}/ç›®å½•ï¼‰
    
    # ç‰¹æ®Štokenå®šä¹‰ï¼ˆç”¨äºåˆ†éš”å¯¹è¯å’Œæ‘˜è¦ï¼‰
    dialogue_start = "\n\n### DIALOGUE:\n"  # å¯¹è¯å¼€å§‹æ ‡è®°
    summary_start = "\n\n### SUMMARY:\n"     # æ‘˜è¦å¼€å§‹æ ‡è®°
    summary_end = "<|endoftext|>"            # æ‘˜è¦ç»“æŸæ ‡è®°ï¼ˆGPT-2çš„EOS tokenï¼‰
    
    # =========================================================================
    # è®­ç»ƒé…ç½®ï¼ˆå»ºè®®å­¦ç”Ÿé‡ç‚¹å…³æ³¨è¿™éƒ¨åˆ†ï¼‰
    # =========================================================================
    # æ¨¡å‹åˆå§‹åŒ–
    init_from = 'gpt2'       # 'scratch'(ä»å¤´è®­ç»ƒ) æˆ– 'resume'(ç»§ç»­è®­ç»ƒ) æˆ– 'gpt2'/'gpt2-xl'(ä»é¢„è®­ç»ƒæ¨¡å‹å¾®è°ƒ)
    
    # æ‰¹æ¬¡é…ç½®
    batch_size = 1              # æ¯ä¸ªGPUçš„æ‰¹æ¬¡å¤§å°ï¼ˆmicro-batch sizeï¼‰
    gradient_accumulation_steps = 128  # æ¢¯åº¦ç´¯ç§¯æ­¥æ•°ï¼Œæœ‰æ•ˆæ‰¹æ¬¡ = batch_size * gradient_accumulation_steps
    block_size = 1024           # ä¸Šä¸‹æ–‡çª—å£å¤§å°ï¼ˆæœ€å¤§åºåˆ—é•¿åº¦ï¼‰
    
    # è®­ç»ƒæ­¥æ•°
    max_iters = 500              # æ€»è®­ç»ƒè¿­ä»£æ¬¡æ•°
    
    # ä¼˜åŒ–å™¨é…ç½®ï¼ˆAdamWï¼‰
    learning_rate = 3e-5        # å­¦ä¹ ç‡ï¼ˆå¾®è°ƒæ—¶ä½¿ç”¨è¾ƒå°çš„å­¦ä¹ ç‡ï¼‰
    weight_decay = 1e-1         # æƒé‡è¡°å‡ç³»æ•°
    beta1 = 0.9                 # Adamçš„beta1å‚æ•°
    beta2 = 0.95                # Adamçš„beta2å‚æ•°
    grad_clip = 1.0             # æ¢¯åº¦è£å‰ªé˜ˆå€¼ï¼ˆ0.0è¡¨ç¤ºä¸è£å‰ªï¼‰
    
    # å­¦ä¹ ç‡è°ƒåº¦
    decay_lr = False            # æ˜¯å¦ä½¿ç”¨å­¦ä¹ ç‡è¡°å‡ï¼ˆå¾®è°ƒæ—¶é€šå¸¸ç”¨å¸¸æ•°å­¦ä¹ ç‡ï¼‰
    warmup_iters = 2000         # å­¦ä¹ ç‡é¢„çƒ­æ­¥æ•°
    lr_decay_iters = 600000     # å­¦ä¹ ç‡è¡°å‡çš„æ€»æ­¥æ•°
    min_lr = 6e-5               # æœ€å°å­¦ä¹ ç‡
    
    # =========================================================================
    # æ¨¡å‹é…ç½®ï¼ˆä»å¤´è®­ç»ƒæ—¶éœ€è¦è®¾ç½®ï¼Œä»é¢„è®­ç»ƒæ¨¡å‹åŠ è½½æ—¶ä¼šè¢«è¦†ç›–ï¼‰
    # =========================================================================
    n_layer = 12                # Transformerå±‚æ•°
    n_head = 12                 # æ³¨æ„åŠ›å¤´æ•°
    n_embd = 768                # åµŒå…¥ç»´åº¦
    dropout = 0.0               # Dropoutç‡ï¼ˆé¢„è®­ç»ƒ0.0ï¼Œå¾®è°ƒå¯å°è¯•0.1+ï¼‰
    bias = False                # LayerNormå’ŒLinearå±‚æ˜¯å¦ä½¿ç”¨bias
    
    # =========================================================================
    # I/Oé…ç½®
    # =========================================================================
    out_dir = 'out-summarization' # checkpointä¿å­˜ç›®å½•
    eval_interval = 10           # æ¯å¤šå°‘æ­¥è¯„ä¼°ä¸€æ¬¡
    log_interval = 5            # æ¯å¤šå°‘æ­¥æ‰“å°æ—¥å¿—
    eval_iters = 40             # è¯„ä¼°æ—¶çš„è¿­ä»£æ¬¡æ•°
    eval_only = False           # æ˜¯å¦åªè¯„ä¼°ä¸è®­ç»ƒ
    always_save_checkpoint = False  # æ˜¯å¦æ¯æ¬¡è¯„ä¼°éƒ½ä¿å­˜checkpointï¼ˆFalseè¡¨ç¤ºåªä¿å­˜æœ€ä½³æ¨¡å‹ï¼‰
    
    # ROUGEè¯„ä¼°é…ç½®ï¼ˆè®­ç»ƒè¿‡ç¨‹ä¸­ï¼‰
    eval_rouge_during_training = True  # æ˜¯å¦åœ¨è®­ç»ƒæ—¶è¯„ä¼°ROUGEåˆ†æ•°
    rouge_eval_samples = 10      # è®­ç»ƒæ—¶ROUGEè¯„ä¼°çš„æ ·æœ¬æ•°ï¼ˆè¾ƒå°‘é¿å…å¤ªæ…¢ï¼‰
    
    # =========================================================================
    # wandbæ—¥å¿—é…ç½®ï¼ˆå¯é€‰ï¼‰
    # =========================================================================
    wandb_log = False           # æ˜¯å¦å¯ç”¨wandbæ—¥å¿—
    wandb_project = 'owt'       # wandbé¡¹ç›®å
    wandb_run_name = 'gpt2'     # wandbè¿è¡Œåç§°
    
    # =========================================================================
    # ç³»ç»Ÿé…ç½®
    # =========================================================================
    device = 'cuda' if torch.cuda.is_available() else 'cpu'  # è®­ç»ƒè®¾å¤‡
    dtype = 'bfloat16' if torch.cuda.is_available() and torch.cuda.is_bf16_supported() else 'float16'
    compile = False             # æ˜¯å¦ä½¿ç”¨PyTorch 2.0ç¼–è¯‘ï¼ˆéœ€è¦CUDA Capability >= 7.0ï¼ŒP100ä¸æ”¯æŒï¼‰
    backend = 'nccl'            # DDPåç«¯ï¼ˆ'nccl'ç”¨äºGPUï¼Œ'gloo'ç”¨äºCPUï¼‰
    
    # =========================================================================
    # æµ‹è¯•/ç”Ÿæˆé…ç½®
    # =========================================================================
    num_test_samples = 10       # æµ‹è¯•æ—¶è¯„ä¼°çš„æ ·æœ¬æ•°é‡
    max_new_tokens = 20        # ç”Ÿæˆæ—¶çš„æœ€å¤§tokenæ•°
    temperature = 0.8           # ç”Ÿæˆæ¸©åº¦ï¼ˆ1.0=æ— å˜åŒ–ï¼Œ<1.0=æ›´ç¡®å®šï¼Œ>1.0=æ›´éšæœºï¼‰
    top_k = 20                 # Top-Ké‡‡æ ·ï¼ˆä¿ç•™æ¦‚ç‡æœ€é«˜çš„Kä¸ªtokenï¼‰


config = Config()

# %%
# =============================================================================
# ç¬¬äºŒéƒ¨åˆ†ï¼šæ•°æ®å‡†å¤‡
# è¯»å–samsumæ•°æ®é›†ï¼Œæ ¼å¼åŒ–ä¸ºè®­ç»ƒæ ¼å¼ï¼Œå¹¶è¿›è¡Œtokenization
# =============================================================================

def prepare_data():
    """
    å‡†å¤‡æ‘˜è¦æ•°æ®é›†
    
    æ•°æ®æ ¼å¼è®¾è®¡ï¼š
    æ¯æ¡è®­ç»ƒæ ·æœ¬æ ¼å¼ä¸ºï¼š
    \n\n### DIALOGUE:\n{å¯¹è¯å†…å®¹}\n\n### SUMMARY:\n{æ‘˜è¦å†…å®¹}<|endoftext|>
    
    é‡è¦ï¼šæ¯ä¸ªæ ·æœ¬ç‹¬ç«‹ä¿å­˜ï¼Œä¸è¿æ¥æˆé•¿åºåˆ—
    
    è¿™æ ·æ¨¡å‹èƒ½å­¦ä¹ åˆ°ï¼š
    - çœ‹åˆ° DIALOGUE æ ‡è®°åï¼Œç†è§£åé¢æ˜¯å¯¹è¯å†…å®¹
    - çœ‹åˆ° SUMMARY æ ‡è®°åï¼Œå¼€å§‹ç”Ÿæˆæ‘˜è¦
    - çœ‹åˆ° <|endoftext|> è¡¨ç¤ºæ‘˜è¦ç»“æŸ
    """
    print("=" * 80)
    print("å‡†å¤‡æ•°æ®é›†...")
    print("=" * 80)
    
    # åˆ›å»ºæ•°æ®ç›®å½•
    data_dir = os.path.join('data', config.dataset)
    os.makedirs(data_dir, exist_ok=True)
    
    # åˆå§‹åŒ–tokenizer
    enc = tiktoken.get_encoding("gpt2")
    
    # å¤„ç†è®­ç»ƒé›†å’ŒéªŒè¯é›†
    for split in ['train', 'validation']:
        print(f"\nå¤„ç† {split} æ•°æ®é›†...")
        csv_file = os.path.join(config.dataset_path, f'{split}.csv')
        
        # è¯»å–CSVæ–‡ä»¶
        dialogues = []
        summaries = []
        with open(csv_file, 'r', encoding='utf-8') as f:
            reader = csv.DictReader(f)
            for row in reader:
                dialogues.append(row['dialogue'])
                summaries.append(row['summary'])
        
        print(f"  è¯»å–äº† {len(dialogues)} æ¡æ•°æ®")
        
        # æ ¼å¼åŒ–å¹¶tokenizeæ¯æ¡æ•°æ®ï¼Œæ¯ä¸ªæ ·æœ¬å•ç‹¬ä¿å­˜
        samples = []  # å­˜å‚¨æ‰€æœ‰æ ·æœ¬çš„tokenåˆ—è¡¨
        valid_count = 0
        skipped_count = 0
        total_tokens = 0
        
        for dialogue, summary in zip(dialogues, summaries):
            # æ„å»ºå®Œæ•´çš„è®­ç»ƒæ ·æœ¬
            formatted_text = (
                config.dialogue_start + dialogue +
                config.summary_start + summary +
                config.summary_end
            )
            
            # Tokenize
            tokens = enc.encode(formatted_text, allowed_special={config.summary_end})
            
            # æ£€æŸ¥é•¿åº¦æ˜¯å¦è¶…è¿‡block_size
            if len(tokens) <= config.block_size:
                samples.append(tokens)
                valid_count += 1
                total_tokens += len(tokens)
            else:
                # å¦‚æœå¤ªé•¿ï¼Œè¿›è¡Œæˆªæ–­ï¼ˆä¿ç•™å¯¹è¯å¼€å§‹å’Œæ‘˜è¦éƒ¨åˆ†ï¼‰
                # æ‰¾åˆ°SUMMARYæ ‡è®°çš„ä½ç½®
                summary_tokens = enc.encode(config.summary_start, allowed_special={config.summary_end})
                summary_pos = None
                for i in range(len(tokens) - len(summary_tokens)):
                    if tokens[i:i+len(summary_tokens)] == summary_tokens:
                        summary_pos = i
                        break
                
                if summary_pos and (len(tokens) - summary_pos) < config.block_size * 0.3:
                    # å¦‚æœèƒ½æ‰¾åˆ°æ‘˜è¦ä½ç½®ï¼Œä¸”æ‘˜è¦éƒ¨åˆ†ä¸å¤ªé•¿ï¼Œåˆ™æˆªæ–­å¯¹è¯éƒ¨åˆ†
                    dialogue_tokens = enc.encode(config.dialogue_start, allowed_special={config.summary_end})
                    available_space = config.block_size - (len(tokens) - summary_pos) - len(dialogue_tokens)
                    
                    if available_space > 0:
                        # æˆªæ–­å¯¹è¯å†…å®¹
                        truncated_tokens = (
                            dialogue_tokens +
                            tokens[len(dialogue_tokens):len(dialogue_tokens)+available_space] +
                            tokens[summary_pos:]
                        )
                        samples.append(truncated_tokens)
                        valid_count += 1
                        total_tokens += len(truncated_tokens)
                    else:
                        skipped_count += 1
                else:
                    skipped_count += 1
        
        print(f"  æœ‰æ•ˆæ ·æœ¬æ•°: {valid_count}")
        print(f"  è·³è¿‡æ ·æœ¬æ•°: {skipped_count}")
        print(f"  æ€»tokenæ•°: {total_tokens:,}")
        print(f"  å¹³å‡tokenæ•°: {total_tokens // valid_count if valid_count > 0 else 0}")
        
        # ä¿å­˜ä¸ºpickleæ–‡ä»¶ï¼ˆæ¯ä¸ªæ ·æœ¬å•ç‹¬ä¿å­˜ï¼‰
        output_file = 'train.pkl' if split == 'train' else 'val.pkl'
        output_path = os.path.join(data_dir, output_file)
        with open(output_path, 'wb') as f:
            pickle.dump(samples, f)
        print(f"  ä¿å­˜åˆ°: {output_path}")
    
    # ä¿å­˜metaä¿¡æ¯ï¼ˆè¯è¡¨å¤§å°ï¼‰
    meta = {
        'vocab_size': enc.n_vocab,
        'dialogue_start': config.dialogue_start,
        'summary_start': config.summary_start,
        'summary_end': config.summary_end,
    }
    with open(os.path.join(data_dir, 'meta.pkl'), 'wb') as f:
        pickle.dump(meta, f)
    
    print("\næ•°æ®å‡†å¤‡å®Œæˆï¼")
    print("=" * 80)


# %%

# =============================================================================
# ç¬¬ä¸‰éƒ¨åˆ†ï¼šæ•°æ®é›†ç±»å’Œæ•°æ®åŠ è½½
# =============================================================================

class SummarizationDataset(Dataset):
    """
    æ‘˜è¦ä»»åŠ¡çš„Datasetç±»
    
    æ¯ä¸ªæ ·æœ¬æ˜¯ä¸€ä¸ªå®Œæ•´çš„"å¯¹è¯+æ‘˜è¦"åºåˆ—ï¼ŒåŒ…å«ï¼š
    - dialogue_start + å¯¹è¯å†…å®¹ + summary_start + æ‘˜è¦å†…å®¹ + summary_end
    
    è¿™ä¸ªç±»è´Ÿè´£ï¼š
    1. åŠ è½½tokenizedçš„æ ·æœ¬
    2. Padding/æˆªæ–­åˆ°å›ºå®šé•¿åº¦
    3. æ„å»ºè¾“å…¥(x)å’Œç›®æ ‡(y)åºåˆ—
    """
    
    def __init__(self, data_path, block_size):
        """
        å‚æ•°:
            data_path: pickleæ–‡ä»¶è·¯å¾„ï¼ŒåŒ…å«æ ·æœ¬çš„tokenåˆ—è¡¨
            block_size: åºåˆ—çš„æœ€å¤§é•¿åº¦
        """
        with open(data_path, 'rb') as f:
            self.samples = pickle.load(f)
        self.block_size = block_size
        print(f"  åŠ è½½äº† {len(self.samples)} ä¸ªæ ·æœ¬")
    
    def __len__(self):
        return len(self.samples)
    
    def __getitem__(self, idx):
        """
        è¿”å›ä¸€ä¸ªæ ·æœ¬çš„(x, y)å¯¹
        
        x: è¾“å…¥åºåˆ— [block_size]
        y: ç›®æ ‡åºåˆ— [block_size]ï¼Œå³xå‘å³ç§»åŠ¨ä¸€ä½
        
        é‡è¦ï¼šxä¸­ä¸èƒ½æœ‰-1ï¼ˆä¼šå¯¼è‡´embeddingé”™è¯¯ï¼‰ï¼Œåªæœ‰yä¸­å¯ä»¥æœ‰-1ç”¨äºpadding
        """
        sample_tokens = self.samples[idx]
        sample_len = len(sample_tokens)
        
        if sample_len >= self.block_size + 1:
            # æ ·æœ¬è¶³å¤Ÿé•¿ï¼Œç›´æ¥æˆªæ–­
            x = torch.tensor(sample_tokens[:self.block_size], dtype=torch.long)
            y = torch.tensor(sample_tokens[1:self.block_size + 1], dtype=torch.long)
        else:
            # æ ·æœ¬è¾ƒçŸ­ï¼Œéœ€è¦padding
            # x: ç”¨0 paddingï¼ˆGPT-2çš„<|endoftext|> token IDæ˜¯50256ï¼Œä½†0é€šå¸¸æ˜¯å®‰å…¨çš„paddingï¼‰
            # y: ç”¨-1 paddingï¼ˆä¼šåœ¨lossè®¡ç®—æ—¶è¢«ignoreï¼‰
            x_tokens = sample_tokens[:sample_len]
            y_tokens = sample_tokens[1:sample_len] if sample_len > 0 else []
            
            # Paddingåˆ°block_size
            x_padding_length = self.block_size - len(x_tokens)
            y_padding_length = self.block_size - len(y_tokens)
            
            # ä½¿ç”¨50256ï¼ˆ<|endoftext|>ï¼‰ä½œä¸ºxçš„paddingï¼Œ-1ä½œä¸ºyçš„padding
            x_tokens = x_tokens + [50256] * x_padding_length
            y_tokens = y_tokens + [-1] * y_padding_length
            
            x = torch.tensor(x_tokens, dtype=torch.long)
            y = torch.tensor(y_tokens, dtype=torch.long)
        
        return x, y


# å…¨å±€å˜é‡ï¼šç¼“å­˜DataLoader
_dataloaders = {'train': None, 'val': None}
_data_iters = {'train': None, 'val': None}

def get_batch(split, data_dir):
    """
    è·å–ä¸€ä¸ªè®­ç»ƒæ‰¹æ¬¡
    
    ä½¿ç”¨DataLoaderå®ç°ï¼Œæ”¯æŒï¼š
    1. è‡ªåŠ¨batchå¤„ç†
    2. å¯é€‰çš„shuffleï¼ˆè®­ç»ƒé›†shuffleï¼ŒéªŒè¯é›†ä¸shuffleï¼‰
    3. è‡ªåŠ¨å¾ªç¯è¿­ä»£ï¼ˆepochç»“æŸåè‡ªåŠ¨é‡æ–°å¼€å§‹ï¼‰
    
    å‚æ•°:
        split: 'train' æˆ– 'val'
        data_dir: æ•°æ®ç›®å½•
    
    è¿”å›:
        x: è¾“å…¥åºåˆ— [batch_size, block_size]
        y: ç›®æ ‡åºåˆ— [batch_size, block_size]
    """
    global _dataloaders, _data_iters
    
    # é¦–æ¬¡è°ƒç”¨ï¼šåˆ›å»ºDataLoader
    if _dataloaders[split] is None:
        data_path = os.path.join(data_dir, f'{split}.pkl')
        dataset = SummarizationDataset(data_path, config.block_size)
        
        # è®­ç»ƒé›†shuffleï¼ŒéªŒè¯é›†ä¸shuffle
        shuffle = (split == 'train')
        
        _dataloaders[split] = DataLoader(
            dataset,
            batch_size=config.batch_size,
            shuffle=shuffle,
            num_workers=0,  # ä¸»çº¿ç¨‹åŠ è½½æ•°æ®ï¼ˆç®€å•åœºæ™¯è¶³å¤Ÿï¼‰
            pin_memory=True if 'cuda' in config.device else False,
        )
        _data_iters[split] = iter(_dataloaders[split])
    
    # è·å–ä¸‹ä¸€ä¸ªbatch
    try:
        x, y = next(_data_iters[split])
    except StopIteration:
        # å½“å‰epochç»“æŸï¼Œé‡æ–°å¼€å§‹
        _data_iters[split] = iter(_dataloaders[split])
        x, y = next(_data_iters[split])
    
    # ç§»åŠ¨åˆ°è®¾å¤‡
    if 'cuda' in config.device:
        x = x.to(config.device, non_blocking=True)
        y = y.to(config.device, non_blocking=True)
    else:
        x = x.to(config.device)
        y = y.to(config.device)
    
    return x, y


@torch.no_grad()
def estimate_loss(model, ctx, data_dir):
    """
    ä¼°è®¡è®­ç»ƒé›†å’ŒéªŒè¯é›†ä¸Šçš„æŸå¤±
    
    é€šè¿‡å¤šæ¬¡è¿­ä»£æ±‚å¹³å‡ï¼Œå¾—åˆ°æ›´å‡†ç¡®çš„æŸå¤±ä¼°è®¡
    """
    out = {}
    model.eval()
    
    for split in ['train', 'val']:
        losses = torch.zeros(config.eval_iters)
        for k in range(config.eval_iters):
            X, Y = get_batch(split, data_dir)
            with ctx:
                logits, loss = model(X, Y)
            losses[k] = loss.item()
        out[split] = losses.mean()
    
    model.train()
    return out
def load_model():
    """
    åŠ è½½è®­ç»ƒå¥½çš„æ¨¡å‹
    
    è¿”å›:
        model: åŠ è½½çš„æ¨¡å‹
        enc: tokenizer
        ctx: autocastä¸Šä¸‹æ–‡
    """
    # è®¾ç½®è®¾å¤‡å’Œç²¾åº¦
    device_type = 'cuda' if 'cuda' in config.device else 'cpu'
    ptdtype = {
        'float32': torch.float32,
        'bfloat16': torch.bfloat16,
        'float16': torch.float16
    }[config.dtype]
    ctx = nullcontext() if device_type == 'cpu' else torch.amp.autocast(
        device_type=device_type, dtype=ptdtype
    )
    
    # åŠ è½½æ¨¡å‹
    print(f"\nä» {config.out_dir} åŠ è½½æ¨¡å‹...")
    ckpt_path = os.path.join(config.out_dir, 'ckpt.pt')
    
    if not os.path.exists(ckpt_path):
        print(f"é”™è¯¯: æ‰¾ä¸åˆ°checkpointæ–‡ä»¶ {ckpt_path}")
        print("è¯·å…ˆè¿è¡Œè®­ç»ƒï¼")
        return None, None, None
    
    checkpoint = torch.load(ckpt_path, map_location=config.device)
    gptconf = GPTConfig(**checkpoint['model_args'])
    model = GPT(gptconf)
    
    state_dict = checkpoint['model']
    unwanted_prefix = '_orig_mod.'
    for k, v in list(state_dict.items()):
        if k.startswith(unwanted_prefix):
            state_dict[k[len(unwanted_prefix):]] = state_dict.pop(k)
    
    model.load_state_dict(state_dict)
    model.eval()
    model.to(config.device)
    
    if config.compile:
        print("ç¼–è¯‘æ¨¡å‹...")
        model = torch.compile(model)
    
    # åˆå§‹åŒ–tokenizer
    enc = tiktoken.get_encoding("gpt2")
    
    return model, enc, ctx


def generate_summary(model, prompt_tokens, enc, ctx, eos_token_id=None):
    """
    ä½¿ç”¨KV cacheåŠ é€Ÿç”Ÿæˆæ‘˜è¦
    
    å‚æ•°:
        model: GPTæ¨¡å‹
        prompt_tokens: promptçš„tokenåˆ—è¡¨
        enc: tokenizer
        ctx: autocastä¸Šä¸‹æ–‡
        eos_token_id: ç»“æŸtoken IDï¼Œç”¨äºæå‰åœæ­¢
    
    è¿”å›:
        generated_text: ç”Ÿæˆçš„å®Œæ•´æ–‡æœ¬ï¼ˆåŒ…å«promptå’Œæ‘˜è¦ï¼‰
    """
    # æ£€æŸ¥é•¿åº¦ï¼Œå¦‚æœå¤ªé•¿åˆ™æˆªæ–­
    if len(prompt_tokens) > config.block_size - config.max_new_tokens:
        dialogue_start_tokens = enc.encode(config.dialogue_start)
        summary_start_tokens = enc.encode(config.summary_start)
        available_space = config.block_size - config.max_new_tokens - len(dialogue_start_tokens) - len(summary_start_tokens)
        
        if available_space > 0:
            # æ‰¾åˆ°å¯¹è¯éƒ¨åˆ†çš„tokens
            # è§£ç promptæ‰¾åˆ°å¯¹è¯éƒ¨åˆ†
            prompt_text = enc.decode(prompt_tokens)
            dialogue_start_pos = prompt_text.find(config.dialogue_start)
            summary_start_pos = prompt_text.find(config.summary_start)
            
            if dialogue_start_pos >= 0 and summary_start_pos > dialogue_start_pos:
                dialogue_text = prompt_text[dialogue_start_pos + len(config.dialogue_start):summary_start_pos]
                dialogue_tokens = enc.encode(dialogue_text)
                truncated_dialogue_tokens = dialogue_tokens[:available_space]
                prompt_tokens = dialogue_start_tokens + truncated_dialogue_tokens + summary_start_tokens
            else:
                # å¦‚æœæ‰¾ä¸åˆ°æ ‡è®°ï¼Œç›´æ¥æˆªæ–­
                prompt_tokens = prompt_tokens[:config.block_size - config.max_new_tokens]
        else:
            # å¦‚æœç©ºé—´ä¸è¶³ï¼Œåªä¿ç•™å¿…è¦çš„æ ‡è®°
            prompt_tokens = dialogue_start_tokens + summary_start_tokens
    
    # è½¬æ¢ä¸ºtensor
    x = torch.tensor(prompt_tokens, dtype=torch.long, device=config.device)[None, ...]
    
    # ä½¿ç”¨KV cacheåŠ é€Ÿç”Ÿæˆæ‘˜è¦
    with torch.no_grad():
        with ctx:
            y = model.generate_with_kv_cache(
                x,
                max_new_tokens=config.max_new_tokens,
                temperature=config.temperature,
                top_k=config.top_k,
                eos_token_id=eos_token_id
            )
    
    # è§£ç ç”Ÿæˆçš„token
    generated_tokens = y[0].tolist()
    generated_text = enc.decode(generated_tokens)
    
    return generated_text

def extract_summary(generated_text, prompt_text, enc):
    """
    ä»ç”Ÿæˆçš„æ–‡æœ¬ä¸­æå–æ‘˜è¦éƒ¨åˆ†
    
    å‚æ•°:
        generated_text: ç”Ÿæˆçš„å®Œæ•´æ–‡æœ¬
        prompt_text: åŸå§‹promptæ–‡æœ¬
        enc: tokenizer
    
    è¿”å›:
        generated_summary: æå–çš„æ‘˜è¦æ–‡æœ¬
    """
    # æå–ç”Ÿæˆçš„æ‘˜è¦ï¼ˆå»é™¤promptéƒ¨åˆ†ï¼‰
    if config.summary_start in generated_text:
        generated_summary = generated_text.split(config.summary_start)[-1]
        
        # å»é™¤ç»“æŸæ ‡è®°
        if config.summary_end in generated_summary:
            generated_summary = generated_summary.split(config.summary_end)[0]
    else:
        # å¦‚æœæ²¡æ‰¾åˆ°æ ‡è®°ï¼Œå°±ä»prompté•¿åº¦ä¹‹åå¼€å§‹æå–
        if len(generated_text) > len(prompt_text):
            generated_summary = generated_text[len(prompt_text):]
        else:
            generated_summary = ""
    
    # æ¸…ç†ç”Ÿæˆçš„æ‘˜è¦
    generated_summary = generated_summary.strip()
    
    # å¦‚æœç”Ÿæˆçš„æ‘˜è¦ä¸ºç©ºï¼Œä½¿ç”¨ç©ºå­—ç¬¦ä¸²
    if not generated_summary:
        generated_summary = ""
    
    return generated_summary


def calculate_rouge(reference_summary, generated_summary):
    """
    è®¡ç®—ROUGEåˆ†æ•°
    
    å‚æ•°:
        reference_summary: å‚è€ƒæ‘˜è¦
        generated_summary: ç”Ÿæˆçš„æ‘˜è¦
    
    è¿”å›:
        dict: åŒ…å«rouge1, rouge2, rougeLçš„å­—å…¸ï¼Œå¦‚æœå¤±è´¥åˆ™è¿”å›None
    """
    try:
        from rouge_score import rouge_scorer
        scorer = rouge_scorer.RougeScorer(['rouge1', 'rouge2', 'rougeL'], use_stemmer=True)
        scores = scorer.score(reference_summary, generated_summary)
        return {
            'rouge1': scores['rouge1'].fmeasure,
            'rouge2': scores['rouge2'].fmeasure,
            'rougeL': scores['rougeL'].fmeasure
        }
    except ImportError:
        return None


@torch.no_grad()
def evaluate_rouge_during_training(model, ctx, data_dir, num_samples=3):
    """
    åœ¨è®­ç»ƒè¿‡ç¨‹ä¸­è¯„ä¼°ROUGEåˆ†æ•°
    
    ä»éªŒè¯é›†ä¸­éšæœºé€‰æ‹©å‡ ä¸ªæ ·æœ¬ï¼Œç”Ÿæˆæ‘˜è¦å¹¶è®¡ç®—ROUGEåˆ†æ•°
    è¿™å¯ä»¥å¸®åŠ©æˆ‘ä»¬å®æ—¶ç›‘æ§æ¨¡å‹çš„æ‘˜è¦è´¨é‡
    
    å‚æ•°:
        model: æ¨¡å‹
        ctx: autocastä¸Šä¸‹æ–‡
        data_dir: æ•°æ®ç›®å½•ï¼ˆæœªä½¿ç”¨ï¼Œä¿ç•™å…¼å®¹æ€§ï¼‰
        num_samples: è¯„ä¼°çš„æ ·æœ¬æ•°é‡ï¼ˆé»˜è®¤3ä¸ªï¼Œé¿å…è¯„ä¼°æ—¶é—´è¿‡é•¿ï¼‰
    
    è¿”å›:
        rouge_scores: åŒ…å«å¹³å‡ROUGEåˆ†æ•°çš„å­—å…¸
    """
    model.eval()
    
    # åˆå§‹åŒ–tokenizer
    enc = tiktoken.get_encoding("gpt2")
    
    # ä»éªŒè¯é›†CSVæ–‡ä»¶ä¸­è¯»å–æ ·æœ¬
    val_csv = os.path.join(config.dataset_path, 'validation.csv')
    if not os.path.exists(val_csv):
        print("  (è·³è¿‡ROUGEè¯„ä¼°ï¼šæœªæ‰¾åˆ°éªŒè¯é›†)")
        model.train()
        return None
    
    # è¯»å–éªŒè¯é›†
    dialogues = []
    summaries = []
    with open(val_csv, 'r', encoding='utf-8') as f:
        reader = csv.DictReader(f)
        for row in reader:
            dialogues.append(row['dialogue'])
            summaries.append(row['summary'])
    
    # éšæœºé€‰æ‹©num_samplesä¸ªæ ·æœ¬
    import random
    indices = random.sample(range(len(dialogues)), min(num_samples, len(dialogues)))
    
    rouge1_scores = []
    rouge2_scores = []
    rougeL_scores = []
    
    # è·å–<|endoftext|>çš„token IDä½œä¸ºåœæ­¢ç¬¦
    eos_token_id = enc.encode(config.summary_end, allowed_special={config.summary_end})[0]
    
    # ä¸´æ—¶ä¿å­˜åŸå§‹max_new_tokensï¼Œè®­ç»ƒæ—¶ä½¿ç”¨è¾ƒå°‘çš„tokensä»¥åŠ å¿«é€Ÿåº¦
    original_max_new_tokens = config.max_new_tokens
    config.max_new_tokens = 100  # è®­ç»ƒæ—¶ç”¨è¾ƒå°‘çš„tokens
    
    for idx in tqdm(indices):
        dialogue = dialogues[idx]
        reference_summary = summaries[idx]
        
        # æ„å»ºprompt
        prompt = config.dialogue_start + dialogue + config.summary_start
        prompt_tokens = enc.encode(prompt, allowed_special={config.summary_end})
        
        # å¦‚æœpromptå¤ªé•¿ï¼Œè·³è¿‡
        if len(prompt_tokens) > config.block_size - config.max_new_tokens:
            print(f"len(prompt_tokens) > config.block_size - config.max_new_tokens: {len(prompt_tokens)} > {config.block_size - config.max_new_tokens}")
            continue
        
        # ä½¿ç”¨KV cacheåŠ é€Ÿç”Ÿæˆæ‘˜è¦ï¼ˆä½†è®­ç»ƒæ—¶ä¸ºäº†é€Ÿåº¦ï¼Œä½¿ç”¨åŸå§‹çš„generateæ–¹æ³•ï¼‰
        # æ³¨æ„ï¼šè®­ç»ƒæ—¶æ¨¡å‹å¯èƒ½è¿˜æ²¡æœ‰å®Œå…¨è®­ç»ƒå¥½ï¼Œæ‰€ä»¥ä½¿ç”¨ç®€å•çš„generateæ–¹æ³•
        x = torch.tensor(prompt_tokens, dtype=torch.long, device=config.device)[None, ...]
        
        with ctx:
            y = model.generate(
                x,
                max_new_tokens=config.max_new_tokens,
                temperature=0.8,
                top_k=200,
                eos_token_id=eos_token_id
            )
        
        # è§£ç 
        generated_tokens = y[0].tolist()
        generated_text = enc.decode(generated_tokens)
        
        # æå–æ‘˜è¦ï¼ˆä½¿ç”¨å…¬å…±å‡½æ•°ï¼‰
        generated_summary = extract_summary(generated_text, prompt, enc)
        
        # è®¡ç®—ROUGEåˆ†æ•°ï¼ˆä½¿ç”¨å…¬å…±å‡½æ•°ï¼‰
        if generated_summary:  # ç¡®ä¿ç”Ÿæˆäº†å†…å®¹
            rouge_scores = calculate_rouge(reference_summary, generated_summary)
            if rouge_scores:
                rouge1_scores.append(rouge_scores['rouge1'])
                rouge2_scores.append(rouge_scores['rouge2'])
                rougeL_scores.append(rouge_scores['rougeL'])
    
    # æ¢å¤åŸå§‹max_new_tokens
    config.max_new_tokens = original_max_new_tokens
    
    model.train()
    
    # è¿”å›å¹³å‡åˆ†æ•°
    if len(rouge1_scores) > 0:
        return {
            'rouge1': np.mean(rouge1_scores),
            'rouge2': np.mean(rouge2_scores),
            'rougeL': np.mean(rougeL_scores)
        }
    else:
        return None


def get_lr(iter_num):
    """
    å­¦ä¹ ç‡è°ƒåº¦ï¼šå¸¦é¢„çƒ­çš„ä½™å¼¦è¡°å‡
    
    1. å‰warmup_itersæ­¥ï¼šçº¿æ€§å¢åŠ 
    2. ä¹‹åï¼šä½™å¼¦è¡°å‡åˆ°min_lr
    """
    # çº¿æ€§é¢„çƒ­
    if iter_num < config.warmup_iters:
        return config.learning_rate * (iter_num + 1) / (config.warmup_iters + 1)
    
    # å¦‚æœè¶…è¿‡è¡°å‡æ­¥æ•°ï¼Œè¿”å›æœ€å°å­¦ä¹ ç‡
    if iter_num > config.lr_decay_iters:
        return config.min_lr
    
    # ä½™å¼¦è¡°å‡
    decay_ratio = (iter_num - config.warmup_iters) / (config.lr_decay_iters - config.warmup_iters)
    coeff = 0.5 * (1.0 + math.cos(math.pi * decay_ratio))
    return config.min_lr + coeff * (config.learning_rate - config.min_lr)


def train():
    """è®­ç»ƒä¸»å‡½æ•°"""
    print("\n" + "=" * 80)
    print("å¼€å§‹è®­ç»ƒ...")
    print("=" * 80)
    
    # è®¾ç½®éšæœºç§å­
    torch.manual_seed(1337)
    torch.backends.cuda.matmul.allow_tf32 = True
    torch.backends.cudnn.allow_tf32 = True
    
    # åˆ›å»ºè¾“å‡ºç›®å½•
    os.makedirs(config.out_dir, exist_ok=True)
    
    # è®¾ç½®è®¾å¤‡å’Œç²¾åº¦
    device_type = 'cuda' if 'cuda' in config.device else 'cpu'
    ptdtype = {
        'float32': torch.float32,
        'bfloat16': torch.bfloat16,
        'float16': torch.float16
    }[config.dtype]
    ctx = nullcontext() if device_type == 'cpu' else torch.amp.autocast(
        device_type=device_type, dtype=ptdtype
    )
    
    # æ•°æ®ç›®å½•
    data_dir = os.path.join('data', config.dataset)
    
    # åŠ è½½è¯è¡¨ä¿¡æ¯
    meta_path = os.path.join(data_dir, 'meta.pkl')
    meta_vocab_size = None
    if os.path.exists(meta_path):
        with open(meta_path, 'rb') as f:
            meta = pickle.load(f)
        meta_vocab_size = meta['vocab_size']
        print(f"ä» {meta_path} åŠ è½½è¯è¡¨å¤§å°: {meta_vocab_size}")
    
    # åˆå§‹åŒ–æ¨¡å‹
    print(f"\næ¨¡å‹åˆå§‹åŒ–æ–¹å¼: {config.init_from}")
    model_args = dict(
        n_layer=config.n_layer,
        n_head=config.n_head,
        n_embd=config.n_embd,
        block_size=config.block_size,
        bias=config.bias,
        vocab_size=None,
        dropout=config.dropout
    )
    
    if config.init_from == 'scratch':
        # ä»å¤´è®­ç»ƒ
        print("ä»å¤´å¼€å§‹è®­ç»ƒæ–°æ¨¡å‹")
        model_args['vocab_size'] = meta_vocab_size if meta_vocab_size else 50304
        gptconf = GPTConfig(**model_args)
        model = GPT(gptconf)
        iter_num = 0
        best_val_loss = 1e9
        
    elif config.init_from == 'resume':
        # ä»checkpointæ¢å¤
        print(f"ä» {config.out_dir} æ¢å¤è®­ç»ƒ")
        ckpt_path = os.path.join(config.out_dir, 'ckpt.pt')
        checkpoint = torch.load(ckpt_path, map_location=config.device)
        checkpoint_model_args = checkpoint['model_args']
        
        for k in ['n_layer', 'n_head', 'n_embd', 'block_size', 'bias', 'vocab_size']:
            model_args[k] = checkpoint_model_args[k]
        
        gptconf = GPTConfig(**model_args)
        model = GPT(gptconf)
        
        state_dict = checkpoint['model']
        unwanted_prefix = '_orig_mod.'
        for k, v in list(state_dict.items()):
            if k.startswith(unwanted_prefix):
                state_dict[k[len(unwanted_prefix):]] = state_dict.pop(k)
        
        model.load_state_dict(state_dict)
        iter_num = checkpoint['iter_num']
        best_val_loss = checkpoint['best_val_loss']
        
    elif config.init_from.startswith('gpt2'):
        # ä»é¢„è®­ç»ƒGPT-2åŠ è½½
        print(f"ä»OpenAI GPT-2åŠ è½½: {config.init_from}")
        override_args = dict(dropout=config.dropout)
        model = GPT.from_pretrained(config.init_from, override_args)
        
        for k in ['n_layer', 'n_head', 'n_embd', 'block_size', 'bias', 'vocab_size']:
            model_args[k] = getattr(model.config, k)
        
        iter_num = 0
        best_val_loss = 1e9
    
    # è°ƒæ•´block_sizeï¼ˆå¦‚æœéœ€è¦ï¼‰
    if config.block_size < model.config.block_size:
        model.crop_block_size(config.block_size)
        model_args['block_size'] = config.block_size
    
    model.to(config.device)
    
    # åˆå§‹åŒ–ä¼˜åŒ–å™¨
    optimizer = model.configure_optimizers(
        config.weight_decay,
        config.learning_rate,
        (config.beta1, config.beta2),
        device_type
    )
    
    if config.init_from == 'resume' and 'optimizer' in checkpoint:
        optimizer.load_state_dict(checkpoint['optimizer'])
    
    checkpoint = None  # é‡Šæ”¾å†…å­˜
    
    # ç¼–è¯‘æ¨¡å‹ï¼ˆå¯é€‰ï¼ŒPyTorch 2.0+ï¼‰
    if config.compile:
        print("ç¼–è¯‘æ¨¡å‹ï¼ˆé¦–æ¬¡ä¼šæ¯”è¾ƒæ…¢ï¼‰...")
        unoptimized_model = model
        model = torch.compile(model)
    
    # åˆå§‹åŒ–GradScalerï¼ˆç”¨äºæ··åˆç²¾åº¦è®­ç»ƒï¼‰
    scaler = torch.cuda.amp.GradScaler(enabled=(config.dtype == 'float16'))
    
    # è®­ç»ƒå¾ªç¯
    print("\nå¼€å§‹è®­ç»ƒå¾ªç¯...")
    print(f"æ€»è¿­ä»£æ¬¡æ•°: {config.max_iters}")
    print(f"æ‰¹æ¬¡å¤§å°: {config.batch_size}")
    print(f"æ¢¯åº¦ç´¯ç§¯æ­¥æ•°: {config.gradient_accumulation_steps}")
    print(f"æœ‰æ•ˆæ‰¹æ¬¡å¤§å°: {config.batch_size * config.gradient_accumulation_steps}")
    print("-" * 80)
    
    X, Y = get_batch('train', data_dir)
    t0 = time.time()
    local_iter_num = 0
    raw_model = model
    running_mfu = -1.0
    
    while True:
        # è®¾ç½®å­¦ä¹ ç‡
        lr = get_lr(iter_num) if config.decay_lr else config.learning_rate
        for param_group in optimizer.param_groups:
            param_group['lr'] = lr
        
        # è¯„ä¼°å’Œä¿å­˜checkpoint
        if iter_num % config.eval_interval == 0:
            losses = estimate_loss(model, ctx, data_dir)
            print(f"\nStep {iter_num}: train loss {losses['train']:.4f}, val loss {losses['val']:.4f}")
            
            # è®¡ç®—ROUGEåˆ†æ•°ï¼ˆä»ç¬¬ä¸€æ¬¡è¯„ä¼°åå¼€å§‹ï¼Œé¿å…åˆå§‹åŒ–æ—¶æ¨¡å‹è¾“å‡ºä¸ç¨³å®šï¼‰
            if iter_num > 0 and config.eval_rouge_during_training:
                print("  è¯„ä¼°ROUGEåˆ†æ•°...")
                rouge_scores = evaluate_rouge_during_training(
                    model, ctx, data_dir, num_samples=config.rouge_eval_samples
                )
                if rouge_scores:
                    print(f"  ROUGE-1: {rouge_scores['rouge1']:.4f}, "
                          f"ROUGE-2: {rouge_scores['rouge2']:.4f}, "
                          f"ROUGE-L: {rouge_scores['rougeL']:.4f}")
            
            # ä¿å­˜checkpoint
            if losses['val'] < best_val_loss or config.always_save_checkpoint:
                best_val_loss = losses['val']
                if iter_num > 0:
                    checkpoint = {
                        'model': raw_model.state_dict(),
                        'optimizer': optimizer.state_dict(),
                        'model_args': model_args,
                        'iter_num': iter_num,
                        'best_val_loss': best_val_loss,
                        'config': vars(config),
                    }
                    print(f"  ä¿å­˜checkpointåˆ° {config.out_dir}")
                    torch.save(checkpoint, os.path.join(config.out_dir, 'ckpt.pt'))
        
        if iter_num == 0 and config.eval_only:
            break
        
        # å‰å‘-åå‘ä¼ æ’­ï¼ˆå¸¦æ¢¯åº¦ç´¯ç§¯ï¼‰
        for micro_step in range(config.gradient_accumulation_steps):
            with ctx:
                logits, loss = model(X, Y)
                loss = loss / config.gradient_accumulation_steps
            
            # å¼‚æ­¥é¢„å–ä¸‹ä¸€ä¸ªbatch
            X, Y = get_batch('train', data_dir)
            
            # åå‘ä¼ æ’­
            scaler.scale(loss).backward()
        
        # æ¢¯åº¦è£å‰ª
        if config.grad_clip != 0.0:
            scaler.unscale_(optimizer)
            torch.nn.utils.clip_grad_norm_(model.parameters(), config.grad_clip)
        
        # æ›´æ–°å‚æ•°
        scaler.step(optimizer)
        scaler.update()
        optimizer.zero_grad(set_to_none=True)
        
        # è®°å½•æ—¥å¿—
        t1 = time.time()
        dt = t1 - t0
        t0 = t1
        
        if iter_num % config.log_interval == 0:
            lossf = loss.item() * config.gradient_accumulation_steps
            if local_iter_num >= 5:
                mfu = raw_model.estimate_mfu(
                    config.batch_size * config.gradient_accumulation_steps, dt
                )
                running_mfu = mfu if running_mfu == -1.0 else 0.9 * running_mfu + 0.1 * mfu
            print(f"iter {iter_num}: loss {lossf:.4f}, time {dt*1000:.2f}ms, mfu {running_mfu*100:.2f}%")
        
        iter_num += 1
        local_iter_num += 1
        
        # ç»ˆæ­¢æ¡ä»¶
        if iter_num > config.max_iters:
            break
    
    print("\nè®­ç»ƒå®Œæˆï¼")
    print("=" * 80)


# %%
# =============================================================================
# ç¬¬äº”éƒ¨åˆ†ï¼šä¸»å‡½æ•°
# =============================================================================

def main():
    """
    ä¸»å‡½æ•°ï¼šæ•´åˆæ•°æ®å‡†å¤‡ã€è®­ç»ƒå’Œè¯„ä¼°
    
    æ‰§è¡Œæµç¨‹ï¼š
    1. å‡†å¤‡æ•°æ®ï¼ˆå¦‚æœæ•°æ®æ–‡ä»¶ä¸å­˜åœ¨ï¼‰
    2. è®­ç»ƒæ¨¡å‹
    3. è¯„ä¼°æ¨¡å‹
    """
    print("\n")
    print("=" * 80)
    print("GPT-2 æ‘˜è¦å¾®è°ƒæ•™å­¦è„šæœ¬".center(80))
    print("=" * 80)
    print("\nå½“å‰é…ç½®:")
    print(f"  æ•°æ®é›†: {config.dataset_path}")
    print(f"  æ¨¡å‹åˆå§‹åŒ–: {config.init_from}")
    print(f"  è®¾å¤‡: {config.device}")
    print(f"  æ‰¹æ¬¡å¤§å°: {config.batch_size}")
    print(f"  æœ€å¤§è¿­ä»£æ¬¡æ•°: {config.max_iters}")
    print(f"  å­¦ä¹ ç‡: {config.learning_rate}")
    
    # æ­¥éª¤1: å‡†å¤‡æ•°æ®
    data_dir = os.path.join('data', config.dataset)
    train_pkl = os.path.join(data_dir, 'train.pkl')
    if not os.path.exists(train_pkl):
        print("\næœªæ‰¾åˆ°å¤„ç†åçš„æ•°æ®æ–‡ä»¶ï¼Œå¼€å§‹å‡†å¤‡æ•°æ®...")
        prepare_data()
    else:
        print("\næ‰¾åˆ°å·²å¤„ç†çš„æ•°æ®æ–‡ä»¶ï¼Œè·³è¿‡æ•°æ®å‡†å¤‡æ­¥éª¤")
        print(f"å¦‚éœ€é‡æ–°å‡†å¤‡æ•°æ®ï¼Œè¯·åˆ é™¤ {data_dir} ç›®å½•")
    
    # æ­¥éª¤2: è®­ç»ƒæ¨¡å‹
    if not config.eval_only:
        train()
    else:
        print("\neval_only=Trueï¼Œè·³è¿‡è®­ç»ƒ")
    
    

main()

# %%
# =============================================================================
# ç¬¬å››éƒ¨åˆ†ï¼šæµ‹è¯•å’Œè¯„ä¼°
# =============================================================================



def evaluate():
    """
    è¯„ä¼°æ¨¡å‹æ€§èƒ½
    
    æµ‹è¯•æµç¨‹ï¼š
    1. åŠ è½½è®­ç»ƒå¥½çš„æ¨¡å‹
    2. ä»æµ‹è¯•é›†ä¸­è¯»å–æ ·æœ¬
    3. ç»™å®šå¯¹è¯ï¼Œè®©æ¨¡å‹ç”Ÿæˆæ‘˜è¦ï¼ˆä½¿ç”¨KV cacheåŠ é€Ÿï¼‰
    4. è®¡ç®—ç”Ÿæˆæ‘˜è¦ä¸çœŸå®æ‘˜è¦çš„ROUGEåˆ†æ•°
    """
    print("\n" + "=" * 80)
    print("å¼€å§‹è¯„ä¼°...")
    print("=" * 80)
    
    # åŠ è½½æ¨¡å‹
    model, enc, ctx = load_model()
    if model is None:
        return
    
    # è·å–<|endoftext|>çš„token IDä½œä¸ºåœæ­¢ç¬¦
    eos_token_id = enc.encode(config.summary_end, allowed_special={config.summary_end})[0]
    
    # åŠ è½½æµ‹è¯•æ•°æ®
    print("\nåŠ è½½æµ‹è¯•æ•°æ®...")
    test_file = os.path.join(config.dataset_path, 'validation.csv')
    
    dialogues = []
    summaries = []
    with open(test_file, 'r', encoding='utf-8') as f:
        reader = csv.DictReader(f)
        for i, row in enumerate(reader):
            if i >= config.num_test_samples:
                break
            dialogues.append(row['dialogue'])
            summaries.append(row['summary'])
    
    print(f"åŠ è½½äº† {len(dialogues)} æ¡æµ‹è¯•æ ·æœ¬")
    
    # æ£€æŸ¥æ˜¯å¦å¯ä»¥è®¡ç®—ROUGE
    rouge_result = calculate_rouge("test", "test")
    use_rouge = rouge_result is not None
    if not use_rouge:
        print("\nè­¦å‘Š: æœªå®‰è£…rouge_scoreåº“ï¼Œå°†è·³è¿‡ROUGEè¯„åˆ†")
        print("å®‰è£…å‘½ä»¤: pip install rouge-score")
    
    # è¯„ä¼°æ¯ä¸ªæ ·æœ¬
    print("\n" + "-" * 80)
    print("å¼€å§‹ç”Ÿæˆå’Œè¯„ä¼°...")
    print("ä¼˜åŒ–: ä½¿ç”¨KV cache + æå‰åœæ­¢")
    print("-" * 80)
    
    all_rouge1_f = []
    all_rouge2_f = []
    all_rougeL_f = []
    
    for idx, (dialogue, reference_summary) in enumerate(zip(dialogues, summaries)):
        print(f"\n[æ ·æœ¬ {idx+1}/{len(dialogues)}]")
        print(f"å¯¹è¯: {dialogue[:100]}..." if len(dialogue) > 100 else f"å¯¹è¯: {dialogue}")
        
        # æ„å»ºpromptï¼ˆå¯¹è¯ + æ‘˜è¦å¼€å§‹æ ‡è®°ï¼‰
        prompt = config.dialogue_start + dialogue + config.summary_start
        
        # Tokenize prompt
        prompt_tokens = enc.encode(prompt, allowed_special={config.summary_end})
        
        # æ£€æŸ¥é•¿åº¦
        if len(prompt_tokens) > config.block_size - config.max_new_tokens:
            print("  è­¦å‘Š: promptå¤ªé•¿ï¼Œè¿›è¡Œæˆªæ–­")
        
        # ä½¿ç”¨KV cacheåŠ é€Ÿç”Ÿæˆæ‘˜è¦
        generated_text = generate_summary(model, prompt_tokens, enc, ctx, eos_token_id=eos_token_id)
        
        # æå–æ‘˜è¦
        generated_summary = extract_summary(generated_text, prompt, enc)
        
        print(f"çœŸå®æ‘˜è¦: {reference_summary}")
        print(f"ç”Ÿæˆæ‘˜è¦: {generated_summary}")
        
        # è®¡ç®—ROUGEåˆ†æ•°
        if use_rouge:
            rouge_scores = calculate_rouge(reference_summary, generated_summary)
            if rouge_scores:
                rouge1_f = rouge_scores['rouge1']
                rouge2_f = rouge_scores['rouge2']
                rougeL_f = rouge_scores['rougeL']
                
                print(f"ROUGE-1: {rouge1_f:.4f}")
                print(f"ROUGE-2: {rouge2_f:.4f}")
                print(f"ROUGE-L: {rougeL_f:.4f}")
                
                all_rouge1_f.append(rouge1_f)
                all_rouge2_f.append(rouge2_f)
                all_rougeL_f.append(rougeL_f)
    
    # æ‰“å°å¹³å‡åˆ†æ•°
    if use_rouge and len(all_rouge1_f) > 0:
        print("\n" + "=" * 80)
        print("å¹³å‡ROUGEåˆ†æ•°:")
        print(f"  ROUGE-1: {np.mean(all_rouge1_f):.4f}")
        print(f"  ROUGE-2: {np.mean(all_rouge2_f):.4f}")
        print(f"  ROUGE-L: {np.mean(all_rougeL_f):.4f}")
        print("=" * 80)


def predict_test_set_fast():
    """
    ä½¿ç”¨KV cacheåŠ é€Ÿçš„æµ‹è¯•é›†æ¨ç†
    
    ä¼˜åŠ¿ï¼š
    1. ä½¿ç”¨KV cacheï¼Œé¿å…é‡å¤è®¡ç®—ï¼Œå¤§å¹…æå‡é€Ÿåº¦
    2. è®¾ç½®æå‰åœæ­¢ç¬¦ï¼Œé‡åˆ°ç»“æŸtokenç«‹å³åœæ­¢
    3. ä½¿ç”¨æˆ‘ä»¬è®­ç»ƒçš„æ¨¡å‹ï¼Œç¡®ä¿å…¼å®¹æ€§
    
    æµç¨‹ï¼š
    1. åŠ è½½è®­ç»ƒå¥½çš„æ¨¡å‹
    2. è¯»å–æµ‹è¯•é›†æ•°æ®
    3. ä½¿ç”¨KV cacheé€æ ·æœ¬ç”Ÿæˆæ‘˜è¦
    4. ä¿å­˜ä¸ºæäº¤æ ¼å¼
    """
    print("\n" + "=" * 80)
    print("å¼€å§‹å¯¹æµ‹è¯•é›†è¿›è¡ŒKV cacheåŠ é€Ÿæ¨ç†...")
    print("=" * 80)
    
    # åŠ è½½æ¨¡å‹
    model, enc, ctx = load_model()
    if model is None:
        return
    
    # è·å–<|endoftext|>çš„token IDä½œä¸ºåœæ­¢ç¬¦
    eos_token_id = enc.encode(config.summary_end, allowed_special={config.summary_end})[0]
    
    # è¯»å–æµ‹è¯•æ•°æ®
    print("\nåŠ è½½æµ‹è¯•æ•°æ®...")
    test_file = '/kaggle/input/nanogpt-fudannlp-cs-30040/test.csv'
    
    if not os.path.exists(test_file):
        print(f"é”™è¯¯: æ‰¾ä¸åˆ°æµ‹è¯•æ–‡ä»¶ {test_file}")
        return
    
    test_data = []
    with open(test_file, 'r', encoding='utf-8') as f:
        reader = csv.DictReader(f)
        for row in reader:
            test_data.append({
                'id': row['id'],
                'dialogue': row['dialogue']
            })
    
    print(f"åŠ è½½äº† {len(test_data)} æ¡æµ‹è¯•æ ·æœ¬")
    
    # å‡†å¤‡ä¿å­˜ç»“æœ
    results = []
    
    print("\n" + "-" * 80)
    print("å¼€å§‹ç”Ÿæˆæ‘˜è¦...")
    print(f"ä¼˜åŒ–: ä½¿ç”¨KV cache + æå‰åœæ­¢ (é‡åˆ° '{config.summary_end}' ç«‹å³åœæ­¢)")
    print("-" * 80)
    
    # å¯¹æ¯ä¸ªæ ·æœ¬ç”Ÿæˆæ‘˜è¦
    import time
    start_time = time.time()
    
    for idx, sample in enumerate(test_data):
        sample_id = sample['id']
        dialogue = sample['dialogue']
        
        if (idx + 1) % 10 == 0 or idx == 0:
            elapsed = time.time() - start_time
            if idx > 0:
                avg_time = elapsed / idx
                remaining = avg_time * (len(test_data) - idx)
                print(f"å¤„ç†è¿›åº¦: {idx+1}/{len(test_data)} | å¹³å‡è€—æ—¶: {avg_time:.2f}ç§’/æ ·æœ¬ | é¢„è®¡å‰©ä½™: {remaining/60:.1f}åˆ†é’Ÿ")
            else:
                print(f"å¤„ç†è¿›åº¦: {idx+1}/{len(test_data)}")
        
        # æ„å»ºpromptï¼ˆå¯¹è¯ + æ‘˜è¦å¼€å§‹æ ‡è®°ï¼‰
        prompt = config.dialogue_start + dialogue + config.summary_start
        
        # Tokenize prompt
        prompt_tokens = enc.encode(prompt, allowed_special={config.summary_end})
        
        # ä½¿ç”¨KV cacheåŠ é€Ÿç”Ÿæˆæ‘˜è¦
        generated_text = generate_summary(model, prompt_tokens, enc, ctx, eos_token_id=eos_token_id)
        
        # æå–æ‘˜è¦
        generated_summary = extract_summary(generated_text, prompt, enc)
        
        results.append({
            'id': sample_id,
            'summary': generated_summary
        })
    
    total_time = time.time() - start_time
    print(f"\nç”Ÿæˆå®Œæˆï¼æ€»è€—æ—¶: {total_time/60:.1f}åˆ†é’Ÿ | å¹³å‡: {total_time/len(test_data):.2f}ç§’/æ ·æœ¬")
    
    # ä¿å­˜ç»“æœåˆ°CSVæ–‡ä»¶
    output_file = 'submission.csv'
    output_path = os.path.join(config.out_dir, output_file)
    
    print(f"\nä¿å­˜ç»“æœåˆ° {output_path}")
    with open(output_path, 'w', encoding='utf-8', newline='') as f:
        writer = csv.DictWriter(f, fieldnames=['id', 'summary'])
        writer.writeheader()
        writer.writerows(results)
    
    print(f"å®Œæˆï¼ç”Ÿæˆäº† {len(results)} æ¡æ‘˜è¦")
    print("=" * 80)
    
    return output_path


# %%
!pip install rouge-score
evaluate()

# %%
predict_test_set_fast()


